# ============================================================
# superintendent101 — Production Environment Variables
# Copy this file to .env on your Hostinger server and fill in all values
# ============================================================

# PostgreSQL connection string from your database provider
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE
DATABASE_URL="postgresql://USER:PASSWORD@HOST:5432/DATABASE"

# Your production domain — no trailing slash
NEXTAUTH_URL="https://profieldhub.com"

# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET="REPLACE_WITH_STRONG_RANDOM_SECRET"

# ---- OpenAI (required for Dust Logs voice transcription) ----
# Get key at: https://platform.openai.com/api-keys
OPENAI_API_KEY=""

# ---- Notion OAuth (optional — enable in profile settings) ----
# Create at: https://www.notion.so/my-integrations (OAuth integration type)
# Redirect URI: https://profieldhub.com/api/integrations/notion/callback
NOTION_CLIENT_ID=""
NOTION_CLIENT_SECRET=""

# ---- Node environment (do not change) ----
NODE_ENV="production"
